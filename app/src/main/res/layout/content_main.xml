<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <cn.ieclipse.af.view.ViewPagerV4
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/view_pager">

    </cn.ieclipse.af.view.ViewPagerV4>
    <com.harry.mdapp.common.MainBottomTab
        android:id="@+id/main_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:layout_below="@id/view_pager"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <cn.ieclipse.af.view.RadioBadgeView
            android:id="@+id/radio_btn_home"
            style="@style/rb_tab_main"
            android:checked="true"
            android:text="电影"
            />

        <cn.ieclipse.af.view.RadioBadgeView
            android:id="@+id/radio_btn_customer"
            style="@style/rb_tab_main"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:checked="false"
            android:drawableTop="@mipmap/person_qunzhushou"/>

        <cn.ieclipse.af.view.RadioBadgeView
            android:id="@+id/radio_btn_user"
            style="@style/rb_tab_main"
            android:text="文学"/>
    </com.harry.mdapp.common.MainBottomTab>

</LinearLayout>
